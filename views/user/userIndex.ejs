<div class="user_contain">
<div class="user-icon"><h3><i class="fa-regular fa-user"></i></h3></div>
    <div class="row user_name"><%=user%></div>
    <div class="row add_new">
        <a href="/user/addaccount" class="btn transac_btn">Add Account</a><br>
       
    </div>

</div>
<div class="row"  style="margin-top: 0%; color:aliceblue; text-align:center;">
   
    <h1>welcome to Expense Manager! <i class="fa-solid fa-indian-rupee-sign"></i></h1>
<h4>My Accounts.....</h4>
    <table class="tables">
    <thead class="t_head">
        <tr>
            <th>Account Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% account.forEach(function(account){ %>
        <tr>
            <td><%=account.accountname%></td>
            <td>
                <a href="/user/<%=account.id%>/transactions" class="btn border-shadow update">
                    <span class="text-gradient"> Transaction</i> </span>
                </a>
                <a href="/user/account/<%=account.id%>" class="btn border-shadow update">
                    <span class="text-gradient"> Account Details</i> </span>
                </a>
                <a href="/user/editaccount/<%=account.id%>" class="btn border-shadow update" style="background-color: rgb(48, 226, 28);">
                    <span class="text-gradient" style="color: rgb(252, 252, 252);" > Edit Account </span>
                </a>
                <a href="/user/delete/<%=account.id%>" method="get" class="btn border-shadow update" style="background-color: rgb(250, 13, 13);" >
                    <span class="text-gradient" style="color: rgb(255, 251, 251);"><i class="fas fa-times"></i> </span>
                </a>
            </td>
        </tr>
        <%})%>
    </tbody>
</table>
</div>
